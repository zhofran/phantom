<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <%= link_to 'Forum', root_path, class: 'navbar-brand' %>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item active">
        <%= form_tag root_path, method: :get, class: 'form-inline my-2 my-lg-0' do %>
          <div class="form-group">
            <%= text_field_tag :search, nil, class: 'form-control mr-sm-2' %>
          </div>
          <%= submit_tag "Cari", class: 'btn btn-outline-success my-2 my-sm-0' %>
        <% end %>
      </li>
    </ul>
     <ul class="navbar-nav">
       <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          <%= user_signed_in? ? current_user.name : 'Hii Guest' %>
        </a>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
          <% if user_signed_in? %>
            <%= link_to "Log Out", destroy_user_session_path, class: 'dropdown-item', method: :delete %>
          <% else %>
            <%= link_to "Sign Up", new_user_registration_path, class: 'dropdown-item' %>
            <%= link_to "Login", new_user_session_path, class: 'dropdown-item' %>
          <% end %>
        </div>
      </li>
     </ul> 
  </div>
</nav>


<% flash.each do |key, value| %>
  <center>
    <div class="alert alert-success alert-dismissible" style="width: 30%;">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
      <%= value %></br>
    </div>
  </center>
<% end %>