<% if @post.errors.any? %>
	<% @post.errors.full_messages.each do |e| %>
		<div class="alert alert-danger alert-dismissible">
			<button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
			<%= e %></br>
		</div>
	<% end %>
<% end %>

<% if user_signed_in? %>
	<%= form_for [@threads, @post] do |f| %>
		<div class="form-group">
			<%= f.label :comment %>
			<%= f.text_area :content, rows: 10, class: 'form-control' %>
		</div>

		<div class="form-group">
			<%= link_to "Back to Home", root_path, class: 'btn btn-danger', style: 'float: left' %>
			<%= f.submit "Create", class: 'btn btn-success', style: 'float: right' %>
		</div>
	<% end %>
<% end %>